datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ENUMS
enum PriceLevel {
  low
  medium
  high
  premium
}

// USERS
model User {
  id           String   @id @default(uuid())
  fullName     String
  email        String   @unique
  passwordHash String
  avatarUrl    String?
  homeCity     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  providers       AuthProvider[]
  reviews         Review[]
  favorites       Favorite[]
  plans           Plan[]
  recommendations RecommendationRun[]
}

// AUTH PROVIDERS
model AuthProvider {
  id          String @id @default(uuid())
  userId      String
  provider    String
  providerUid String

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerUid])
}

// PLACES
model Place {
  id              String      @id @default(uuid())
  name            String
  description     String?
  priceLevel      PriceLevel?
  avgPriceMin     Int?
  avgPriceMax     Int?
  ratingAvg       Float       @default(0)
  ratingCount     Int         @default(0)
  phone           String?
  websiteUrl      String?
  instagramHandle String?
  addressLine     String?
  city            String?
  country         String?     @default("EG")
  geopoint        Json
  amenities       Json        @default("{}")
  tags            String[]    @default([])
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  photos     PlacePhoto[]
  categories PlaceCategory[]
  hours      PlaceHour[]
  reviews    Review[]
  favorites  Favorite[]
  plans      Plan[]          @relation("PlacePlans")  
}

// PLANS
model Plan {
  id          String    @id @default(uuid())
  userId      String
  title       String
  city        String?
  startAt     DateTime?
  budgetTotal Int?
  groupSize   Int?
  isPublic    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  places Place[] @relation("PlacePlans")  
}

// PLACE PHOTOS
model PlacePhoto {
  id        String  @id @default(uuid())
  placeId   String
  url       String
  alt       String?
  sortOrder Int     @default(0)

  place Place @relation(fields: [placeId], references: [id])
}

// CATEGORIES
model Category {
  id     String @id @default(uuid())
  slug   String @unique
  nameAr String
  nameEn String

  places PlaceCategory[]
}

// PLACE CATEGORIES (Many-to-Many)
model PlaceCategory {
  placeId    String
  categoryId String

  place    Place    @relation(fields: [placeId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@id([placeId, categoryId])
}

// PLACE HOURS
model PlaceHour {
  id        String   @id @default(uuid())
  placeId   String
  dayOfWeek Int
  openTime  DateTime
  closeTime DateTime

  place Place @relation(fields: [placeId], references: [id])
}

// REVIEWS
model Review {
  id        String   @id @default(uuid())
  userId    String
  placeId   String
  rating    Int
  text      String?
  photos    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  place Place @relation(fields: [placeId], references: [id])

  @@unique([userId, placeId])
}

// FAVORITES
model Favorite {
  userId    String
  placeId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  place Place @relation(fields: [placeId], references: [id])

  @@id([userId, placeId])
}

// RECOMMENDATION RUNS
model RecommendationRun {
  id             String   @id @default(uuid())
  userId         String?
  inputPayload   Json
  outputPlaceIds String[]
  createdAt      DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}
